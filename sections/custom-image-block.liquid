<div class="page-width">
<div class="custom-image-gallery">
  <h3>Featured On: </h3>
  {% for block in section.blocks %}
    {% if block.settings.image %}
      <div class="gallery-item">
        <img 
          src="{{ block.settings.image | img_url: '800x' }}" 
          alt="{{ block.settings.alt_text | escape }}" 
          loading="lazy" 
        />
      </div>
    {% endif %}
  {% endfor %}
</div>
  </div>

<style>
.custom-image-gallery {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  
}
.gallery-item {
  flex: 1 1 200px;
}
.gallery-item img {
  width: 100%;
  height: auto;
  display: block;
}
</style>
{% schema %}
{
  "name": "Custom Image Gallery",
  "settings": [
    
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Image alt text"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom Image Gallery",
      "category": "Custom",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

