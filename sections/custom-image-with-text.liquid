<div class="page-width">
<div class="image-text-section">
  
    <div class="text_section">
      {% if section.settings.review-text %}
      <p class="reviews">{{ section.settings.review-text }}</p>
      {% endif %}
      {% if section.settings.sub_title %}
      <h3 class="sub_title">{{ section.settings.sub_title }}</h3>
        {% endif %}
       {% if section.settings.title %}
      <h2 class="title">{{ section.settings.title }}</h2>
       {% endif %}
      
       {% if section.settings.button_text %}<a class="button" href="{{ section.settings.link }}">{{ section.settings.button_text }}</a>{% endif %}
       {% if section.settings.shipping_text %}<p>{{ section.settings.shipping_text }}</p>{% endif %}
    </div>
  
    <div class="image_section">
      {% if section.settings.image %}
      <img src="{{ section.settings.image | img_url: 'original' }}" alt="Image">
      {% endif %}
    </div>
  
  </div>
</div>


<style>
  .image-text-section{
    display:flex;
  }
  .text_section{
    text-align: {{ section.settings.contetn_alingment }};
    order:1;
  }
  .image_section{
    
  }
  .title{
    color:{{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.font_weight}};
  }
  .sub_title{
    color:{{ section.settings.sub_title_color }};
    font-size: {{ section.settings.sub_title_size }};
    font-weight: {{ section.settings.sub_title_font_weight}};
  }
  .reviews{
    color: {{ section.settings.review_color }};
  }
  .button{
    
  }
</style>
{% schema %}
  {
    "name": "Custom Image and Text",
    "settings": [
      {
      "type": "select",
      "id": "contetn_alingment",
      "label": "Content Alingment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
      {
         "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Title"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Choose Title Color",
        "default": "#000000"
      },
      {
        "type": "range",
        "min": 12,
        "max": 50,
        "unit": "px",
        "step": 1,
        "id": "title_size",
        "label": "Heading Font Size",
        "default": 24
      },
      {
        "type": "range",
        "min": 200,
        "max": 900,
        "step": 100,
        "id": "font_weight",
        "label": "Heading Font Weight",
        "default": 400
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Heading",
        "default": "Sub Title"
      },
      {
        "type": "color",
        "id": "sub_title_color",
        "label": "Choose Sub Title Color",
        "default": "#000000"
      },
      {
        "type": "range",
        "min": 12,
        "max": 50,
        "unit": "px",
        "step": 1,
        "id": "sub_title_size",
        "label": "Sub Heading Font Size",
        "default": 24
      },
      {
        "type": "range",
        "min": 200,
        "max": 900,
        "step": 100,
        "id": "sub_title_font_weight",
        "label": "Heading Font Weight",
        "default": 400
      },
      
      {
        "type": "text",
        "id": "review-text",
        "label": "Review Text",
        "default": "Over 6,000 ★★★★★★ Reviews"
      },
      {
        "type": "color",
        "id": "review_color",
        "label": "Choose Review Color",
        "default": "#000000"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Order now"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button URL"
      },
      {
        "type": "text",
        "id": "shipping_text",
        "label": "Shipping Detail",
        "default":"Free Delivery, Risk Free Guarantee."
        
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Choose Image"
      }
    ],
    "presets": [
      {
        "name": "Custom image with text",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

